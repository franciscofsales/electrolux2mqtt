# MQTT configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_PROTOCOL=mqtt
MQTT_CLIENT_ID=electrolux2mqtt_dev
MQTT_TOPIC_PREFIX=electrolux2mqtt
# MQTT_USERNAME=your_username
# MQTT_PASSWORD=your_password
MQTT_CONNECT_TIMEOUT=5000

# Application settings
PORT=3000
LOG_LEVEL=debug

# Polling settings
POLLING_INTERVAL_SECONDS=30

# API settings
API_USE_MOCK=true

# Generic API settings (only used with API_USE_MOCK=true)
API_URL=https://api.example.com
# API_KEY=your_api_key
# API_SECRET=your_api_secret

# Electrolux API settings (used when API_USE_MOCK=false)
ELECTROLUX_API_URL=https://api.developer.electrolux.one
ELECTROLUX_API_KEY=your_electrolux_api_key
ELECTROLUX_REFRESH_TOKEN=your_refresh_token

# Home Assistant integration settings
# Set to 'true' to enable Home Assistant MQTT discovery integration
HOME_ASSISTANT_ENABLED=false
# Discovery prefix (default: homeassistant)
# HOME_ASSISTANT_DISCOVERY_PREFIX=homeassistant
# Node ID (default: homeassistant)
# HOME_ASSISTANT_NODE_ID=homeassistant
