{
  "name": "electrolux2mqtt",
  "version": "1.0.0",
  "description": "Node.js service using TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:prod": "NODE_ENV=production node build.js",
    "build:ts": "tsc",
    "dev": "node -r dotenv/config --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint --config eslint.config.js src",
    "lint:fix": "eslint --config eslint.config.js src --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:mqtt": "node --experimental-specifier-resolution=node dist/utils/mqtt-test.js"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "esbuild"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/mqtt": "^2.5.0",
    "@types/node": "^22.15.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "mqtt": "^5.12.0"
  }
}
